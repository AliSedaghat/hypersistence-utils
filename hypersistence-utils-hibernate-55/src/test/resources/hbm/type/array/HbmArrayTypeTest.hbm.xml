<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false">

	<class name="com.vladmihalcea.hibernate.type.array.HbmArrayTypeTest$Event" table="event" lazy="true">
		<id name="id" column="id" type="long">
			<generator class="assigned"/>
		</id>

		<property name="sensorValues" type="com.vladmihalcea.hibernate.type.array.IntArrayType">
			<meta attribute="org.hibernate.type.ParameterType">int[]</meta>
			<column name="sensor_values" sql-type="int[]"/>
		</property>

		<property name="sensorLongValues" type="com.vladmihalcea.hibernate.type.array.LongArrayType">
			<meta attribute="org.hibernate.type.ParameterType">long[]</meta>
			<column name="sensor_long_values" sql-type="bigint[]"/>
		</property>
	</class>

</hibernate-mapping>